# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
# Change these settings to your own preference
indent_style = space
indent_size = 4

# We recommend you to keep these unchanged
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.sh]
indent_style = tab
indent_size = 4

[*.sublime-project]
indent_style = tab

[*.toml]
indent_style = space
indent_size = 4

[*.yml]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[.gitmodules]
indent_style = tab

[docker-compose.{yml,override.yml,override.yml.dist}]
indent_style = space
indent_size = 2

[Dockerfile]
indent_style = tab
indent_size = 4
